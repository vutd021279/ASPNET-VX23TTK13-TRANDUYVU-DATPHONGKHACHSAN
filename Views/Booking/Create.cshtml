@model HotelBooking.Models.Booking
@{
    ViewBag.Title = "Đặt phòng";
}

<h2 class="mt-4 mb-4">Đặt phòng</h2>

@using (Html.BeginForm("Create", "Booking", FormMethod.Post, new { @class = "needs-validation" }))
{
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin khách hàng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.CustomerName, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CustomerName, new { @class = "form-control", placeholder = "Nhập họ tên" })
                        @Html.ValidationMessageFor(m => m.CustomerName, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "email@example.com" })
                        @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.Phone, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.Phone, new { @class = "form-control", placeholder = "0912345678" })
                        @Html.ValidationMessageFor(m => m.Phone, "", new { @class = "text-danger" })
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Thông tin đặt phòng</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        @Html.LabelFor(m => m.RoomTypeID, "Loại phòng", new { @class = "form-label" })
                        @Html.DropDownList("RoomTypeID", (SelectList)ViewBag.RoomTypes, "Chọn loại phòng", new { @class = "form-select" })
                        @Html.ValidationMessageFor(m => m.RoomTypeID, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CheckInDate, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CheckInDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.CheckInDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.CheckOutDate, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.CheckOutDate, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.CheckOutDate, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.NumberOfGuests, new { @class = "form-label" })
                        @Html.TextBoxFor(m => m.NumberOfGuests, new { @class = "form-control", type = "number", min = "1" })
                        @Html.ValidationMessageFor(m => m.NumberOfGuests, "", new { @class = "text-danger" })
                    </div>

                    <div class="mb-3">
                        @Html.LabelFor(m => m.SpecialRequests, new { @class = "form-label" })
                        @Html.TextAreaFor(m => m.SpecialRequests, new { @class = "form-control", rows = "3", placeholder = "Ví dụ: Tầng cao, view đẹp..." })
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="text-center mt-4">
        <button type="submit" class="btn btn-success btn-lg">
            <i class="fas fa-check"></i> Xác nhận đặt phòng
        </button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary btn-lg">
            <i class="fas fa-times"></i> Hủy
        </a>
    </div>
}

