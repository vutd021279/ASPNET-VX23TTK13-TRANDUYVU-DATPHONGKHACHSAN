<!-- Views/Admin/EditRoomType.cshtml -->
@model HotelBooking.Models.RoomType
@{
    ViewBag.Title = "Sửa loại phòng";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Sửa loại phòng</h2>
<hr>

@using (Html.BeginForm("EditRoomType", "Admin", FormMethod.Post, new { @class = "mt-4" }))
{
    @Html.AntiForgeryToken()
    @Html.HiddenFor(m => m.RoomTypeID)
    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(m => m.TypeName, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.TypeName, new { @class = "form-control" })
                @Html.ValidationMessageFor(m => m.TypeName, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Price, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Price, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.Capacity, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.Capacity, new { @class = "form-control", type = "number" })
                @Html.ValidationMessageFor(m => m.Capacity, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="col-md-6">
            <div class="mb-3">
                @Html.LabelFor(m => m.Description, new { @class = "form-label" })
                @Html.TextAreaFor(m => m.Description, new { @class = "form-control", rows = "5" })
            </div>

            <div class="mb-3">
                @Html.LabelFor(m => m.ImageUrl, new { @class = "form-label" })
                @Html.TextBoxFor(m => m.ImageUrl, new { @class = "form-control" })
            </div>
        </div>
    </div>

    <button type="submit" class="btn btn-success">
        <i class="fas fa-save"></i> Cập nhật
    </button>
    <a href="@Url.Action("RoomTypes")" class="btn btn-secondary">
        <i class="fas fa-times"></i> Hủy
    </a>
}